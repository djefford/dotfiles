# My i3blocks config
command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=15
color=#F3F4F5
markup=none

[volume]
label=VOL
instance=Master
interval=1
signal=10

[memory]
label=MEM
separator=false
interval=30

[memory]
label=SWAP
instance=swap
separator=false
interval=30

[disk]
label=HOME
interval=30

[iface]
instance=wlp2s0
color=#00FF00
interval=10
separator=false

[cpu_usage]
label=CPU
interval=1
min_width=CPU: 100.00%

[battery]
label=BAT
interval=30

[time]
command=date '+%H:%M %d-%b-%Y'
interval=5
